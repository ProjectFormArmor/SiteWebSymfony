{% extends "FormArmorBundle::admin_layout.html.twig" %}
{% block FormArmor_body %}
	<h2>AFFICHAGE DES SESSIONS POUR CONFIRMATION D'INSCRIPTION</h2>
	<table class="table">
		<thead>
		<tr>
			<th>Id</th>
			<th>Formation</th>
			<th>Date debut</th>
			<th>Nombre de places</th>
			<th>Nombre d'inscrits</th>
			<th>Close</th>
                        <th>Option</th>
		</tr>
		</thead>
		<tbody>
			{% for session in lesSessions %}
				<tr {# si le nombre de passages dans la boucle est pair #} {% if loop.index is even %} class="success" {% else %} class="info" {% endif %}>
					<td>{{session.id}}</td>
					<td>{{session.formation.libelle}}-{{session.formation.niveau}}</td>
					<td>{{session.dateDebut|date('Y-m-d')}}</td>
					<td>{{session.nbPlaces}}</td>
					<td>{{session.nbInscrits}}</td>
					{% if (session.close == 1) %}
						<td>Oui</td>
					{% else %}
						<td>Non</td>
					{% endif %}
                                        <td><a href="{{path('form_armor_admin_validunesession', {'id':session.id})}}"><button type="button" class="btn btn-info"> Valider </button></a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
	<ul class="pagination">
		{# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
		{% for p in range(1, nbPages) %}
			<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('form_armor_admin_valid_session', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
	</ul>
	
	<script>
		$(function() {
			$('#menu7').attr('class', 'active');
		});
	</script>
	
{% endblock %}
